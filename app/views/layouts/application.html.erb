<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="turbo-cache-control" content="no-preview">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_import_module_tag "base" %>

    <script src="https://kit.fontawesome.com/28ebeb31f4.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= render "layouts/header" %>
    <div class="container pt-4 flex-grow-1">
      <div id="toastr"><%= render "shared/toastr" %></div>
      <%= breadcrumbs style: :bootstrap5 %>
      <%= yield %>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
